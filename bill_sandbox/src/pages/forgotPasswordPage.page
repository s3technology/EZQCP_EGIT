<apex:page controller="myForgotPassword" showHeader="false">
<style>
    .footer{
        font-family: 'Lucida Sans Unicode', 'Lucida Grande', Tahoma, sans-serif;
        margin-left:200px;
        padding-top: 35px;
        padding-bottom: 40px;
        color:hsl(0, 0%, 45%);
        margin-left:280px;
    }
    hr{margin-left:200px;}
</style>
<!--<a href="http://carepointsolutions.force.com/index"> -->
