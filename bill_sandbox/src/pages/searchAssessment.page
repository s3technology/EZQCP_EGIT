        margin-left: auto; background-color: #FFFFFF;margin-bottom:10px;
    }
    .pageDescription {
    margin-left: 30px;
}
	
    #navigationBottom {margin-left:200px;}
    .horizontalNavigationBar { width: 1090px; }
